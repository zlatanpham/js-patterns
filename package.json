{
  "name": "js-patterns",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "lint:base": "eslint **/*.js --ignore-pattern node_modules/ ",
    "lint": "npm run lint:base",
    "lint:fix": "npm run lint:base --fix"
  },
  "devDependencies": {
    "eslint": "^5.15.2",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
